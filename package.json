{
	"name": "dicelette",
	"version": "1.20.1",
	"engineStrict": true,
	"private": true,
	"scripts": {
		"lint": "biome format --write packages",
		"clean": "pnpm run --recursive prebuild",
		"build": "pnpm run --recursive build",
		"prewatch": "pnpm run --recursive clean",
		"watch:start": "tsc -b packages/bot/tsconfig.json packages/dice/tsconfig.json packages/localization/tsconfig.json packages/types/tsconfig.json packages/utils/tsconfig.json --watch",
		"watch:bot": "tsx watch --clear-screen=false packages/bot/index.ts",
		"watch": "run-p -ln watch:*",
		"prestart": "pnpm run --recursive build",
		"start": "node packages/bot/dist/index.js"
	},
	"engines": {
		"node": "^20.0.0"
	},
	"cross-os": {
		"clean": {
			"linux": "rm -rf dist",
			"win32": "rmdir /s /q dist"
		}
	},
	"commit-and-tag-version": {
		"t": ""
	},
	"keywords": [],
	"author": "",
	"license": "GNU GPLv3",
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"cpx": "^1.5.0",
		"i18next": "^24.0.5",
		"npm-run-all": "^4.1.5",
		"parallelshell": "^3.0.2",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.10",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.2",
		"wait-on": "^8.0.1"
	},
	"dependencies": {
		"@dicelette/core": "^1.5.2",
		"@types/node": "^22.10.1",
		"concurrently": "^9.1.0",
		"cross-os": "^1.5.0",
		"discord.js": "^14.16.3",
		"dotenv": "^16.4.7",
		"ts-node-dev": "^2.0.0",
		"tslog": "^4.9.3",
		"tsx": "^4.19.2",
		"uniformize": "^2.2.0"
	}
}
